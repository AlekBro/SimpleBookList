@using SimpleBookList.Models;
@model IEnumerable<BookViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" id="BookListTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pages)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                Authors
            </th>
            <th>
                Edit
            </th>
            <th>
                Delete
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.FormattedReleaseDate
                </td>
                <td>
                    @item.Pages
                </td>
                <td>
                    @item.Rating
                </td>
                <td>
                    @foreach (AuthorViewModel author in item.Authors)
                    {
                        <span>@Html.RouteLink(author.Name, new { controller = "Books", action = "EditAuthor", id = author.Id })</span>
                    }
                </td>

                <td></td>
                <td></td>

            </tr>
        }
    </tbody>
</table>
